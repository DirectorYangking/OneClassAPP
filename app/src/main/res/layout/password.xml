<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6FA" >

    <TextView
        android:id="@+id/update_title"
        android:text="修改密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textStyle="bold"
        android:textSize="42sp"

        android:layout_gravity="bottom"
        />


    <EditText
        android:textSize="18sp"
        android:id="@+id/udsignedit1"
        android:hint="原密码"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/update_title"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        android:maxLength="20"
        android:maxLines="1"/>





    <EditText
    android:textSize="18sp"
    android:id="@+id/udsignedit2"
    android:hint="新密码(6-20位)"
        android:inputType="textPassword"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/udsignedit1"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:layout_marginTop="20dp"
    android:maxLength="20"
    android:maxLines="1"/>

    <EditText
        android:textSize="18sp"
        android:id="@+id/udsignedit3"
        android:hint="确认密码"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/udsignedit2"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="200dp"
        android:maxLength="20"
        android:maxLines="1"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="5dp"
        >







        <Button
            android:id="@+id/udbutton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#7171C6"
            android:textSize="18dp"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:layout_alignParentLeft="true"

            android:text="完成" />


        <Button
            android:id="@+id/udbutton2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"


            android:layout_weight="1"
            android:background="#7171C6"
            android:text="返回"
            android:textColor="@android:color/white"
            android:textSize="18dp" />

    </LinearLayout>


</RelativeLayout>