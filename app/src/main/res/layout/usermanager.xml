<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="90dp">



    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/minehead"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@mipmap/loading"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"
         />




    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/minehead"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/minehead"
        android:text="姓名"
        android:textSize="24dp"
        />

    <TextView
        android:id="@+id/sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#BFBFBF"
        android:layout_alignBottom="@id/minehead"
        android:layout_toRightOf="@id/minehead"
        android:layout_marginLeft="10dp"
        android:text="男"
        android:textSize="18dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/name"
            android:layout_alignTop="@+id/minehead"
            android:layout_marginTop="5dp"
            android:textSize="24sp"
            android:text="18576820829"
            android:layout_marginLeft="20dp"
            />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#BFBFBF"
        android:layout_alignBottom="@id/minehead"
        android:layout_toRightOf="@id/sex"
        android:layout_alignLeft="@+id/tel"
        android:text="2018-02-20"
        android:textSize="18dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"/>

<Button
    android:id="@+id/delete"
    android:layout_width="50dp"
    android:layout_height="30dp"
    android:background="#cc0000"
    android:text="删除"
    android:textSize="18dp"
    android:layout_marginRight="5dp"
    android:textColor="#ffffff"
    android:textStyle="bold"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"/>

</RelativeLayout>