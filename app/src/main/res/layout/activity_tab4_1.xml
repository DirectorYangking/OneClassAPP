<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    xmlns:Topbar="http://schemas.android.com/apk/res-auto"
    >
    
    <eclass.dogking.com.oneclass.TopBar
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
         
        Topbar:titleText="个人信息"  
      
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:orientation="vertical"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/minehead"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/loading"
            android:layout_gravity="center"
            />

<TextView
    android:id="@+id/chose"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:text="更换头像"
    android:textColor="#3f51b6"
    android:textSize="18sp"

    />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/mine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textSize="30dp"
            android:layout_marginLeft="55dp"/>

        <TextView
            android:id="@+id/mine1_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d6dbf2"
            android:textSize="30dp"
            android:text=""
            android:layout_marginLeft="25dp"
            android:layout_marginRight="40dp"
            android:layout_toRightOf="@id/mine1"/>

        <TextView
            android:id="@+id/mine2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mine1"
            android:layout_marginTop="10dp"
            android:text="手机"
            android:textSize="30dp"
            android:layout_alignLeft="@id/mine1"/>


        <TextView
            android:id="@+id/mine2_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d6dbf2"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:layout_below="@+id/mine1_1"
            android:layout_marginRight="40dp"
            android:layout_alignLeft="@+id/mine1_1"/>

        <TextView
            android:id="@+id/mine3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mine2"
            android:layout_marginTop="10dp"
            android:text="性别"
            android:textSize="30dp"
            android:layout_alignLeft="@id/mine1"/>


        <TextView
            android:id="@+id/mine3_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mine2"
            android:background="#d6dbf2"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:textSize="30dp"
            android:text=""
            android:layout_alignLeft="@id/mine1_1"/>

        <TextView
            android:id="@+id/mine4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mine3"
            android:layout_marginTop="10dp"
            android:text="已学"
            android:textSize="30dp"
            android:layout_alignLeft="@id/mine1"/>


        <TextView
            android:id="@+id/mine4_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mine3"
            android:background="#d6dbf2"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:textSize="30dp"
            android:text="test"
            android:layout_alignLeft="@id/mine1_1"/>

        <TextView
            android:id="@+id/mine5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mine4"
            android:layout_marginTop="10dp"
            android:text="简介"
            android:textSize="30dp"
            android:layout_alignLeft="@id/mine1"/>


        <TextView
            android:id="@+id/mine5_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mine4"
            android:layout_marginBottom="15dp"
            android:background="#d6dbf2"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:textSize="30dp"
            android:text=""
            android:layout_alignLeft="@id/mine1_1"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="5dp"
            >


            <Button
                android:id="@+id/mineb1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#7171C6"
                android:textSize="18dp"
                android:textColor="@android:color/white"
                android:layout_weight="1"
                android:layout_marginRight="20dp"



                android:text="返回" />


            <Button
                android:id="@+id/mineb2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#7171C6"
                android:text="修改"
                android:textColor="@android:color/white"
                android:textSize="18dp" />

        </LinearLayout>

    </RelativeLayout>



</LinearLayout>