<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:Topbar="http://schemas.android.com/apk/res-auto"
    >

    <eclass.dogking.com.oneclass.TopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        Topbar:titleText="教师信息"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        >

        <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/teacherdata_picture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/loading"
        android:layout_gravity="center"
        />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/teacherdata1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textSize="30dp"
            android:layout_marginLeft="55dp"/>

        <TextView
            android:id="@+id/teacherdata1_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d6dbf2"
            android:textSize="30dp"
            android:text=""
            android:layout_marginLeft="25dp"
            android:layout_marginRight="40dp"
            android:layout_toRightOf="@id/teacherdata1"/>

        <TextView
            android:id="@+id/teacherdata2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/teacherdata1"
            android:layout_marginTop="10dp"
            android:text="性别"
            android:textSize="30dp"
            android:layout_alignLeft="@id/teacherdata1"/>


        <TextView
            android:id="@+id/teacherdata2_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d6dbf2"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:layout_below="@+id/teacherdata1"
            android:layout_alignLeft="@id/teacherdata1_1"
            android:layout_marginRight="40dp"
            />

        <TextView
            android:id="@+id/teacherdata3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/teacherdata2"
            android:layout_marginTop="10dp"
            android:text="邮箱"
            android:textSize="30dp"
            android:layout_alignLeft="@id/teacherdata1"/>


        <TextView
            android:id="@+id/teacherdata3_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/teacherdata2"
            android:background="#d6dbf2"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:textSize="30dp"
            android:text=""
            android:layout_alignLeft="@id/teacherdata1_1"/>

        <TextView
            android:id="@+id/teacherdata4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/teacherdata3"
            android:layout_marginTop="10dp"
            android:text="学历"
            android:textSize="30dp"
            android:layout_alignLeft="@id/teacherdata1"/>


        <TextView
            android:id="@+id/teacherdata4_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/teacherdata3"
            android:background="#d6dbf2"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:textSize="30dp"
            android:text=""
            android:layout_alignLeft="@id/teacherdata1_1"/>

        <TextView
            android:id="@+id/teacherdata5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/teacherdata4"
            android:layout_marginTop="10dp"
            android:text="简介"
            android:textSize="30dp"
            android:layout_alignLeft="@id/teacherdata1"/>


        <TextView
            android:id="@+id/teacherdata5_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/teacherdata4"
            android:layout_marginBottom="15dp"
            android:background="#d6dbf2"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:textSize="30dp"
            android:text=""
            android:layout_alignLeft="@id/teacherdata1_1"/>



    </RelativeLayout>



</LinearLayout>